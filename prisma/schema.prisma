generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String       @unique
  emailVerified   DateTime?
  image           String?
  password        String
  role            Role         @default(USER)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  RecipieBook RecipieBook?
}

model Recipie {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  ingrediants   String[]
  instructions  String[]
  categories    Category[]   @relation(fields: [categoryId], references: [id])
  categoryId    String[]     @db.ObjectId
  recipieBook   RecipieBook? @relation(fields: [recipieBookId], references: [id])
  recipieBookId String?      @db.ObjectId
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  recipies  Recipie[] @relation(fields: [recipieId], references: [id])
  recipieId String[]  @db.ObjectId
}

model RecipieBook {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  recipies Recipie[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String    @unique @db.ObjectId
}
